<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect3"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/add_cart_cover"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/add_cart_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="name"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/add_cart_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="description"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-condensed"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/add_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="price"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/add_cart_category"
            android:layout_below="@+id/add_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-black"
            android:text="category"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/add_cart_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif-black"
            android:text="subtotal"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/add_cart_quantity_base"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/add_cart_subtotal"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_cart_subtract"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_circle1"
                android:src="@drawable/ic_subtract" />

            <TextView
                android:id="@+id/add_cart_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="1"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/add_cart_add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_circle1"
                android:src="@drawable/ic_add" />

        </LinearLayout>


        <Button
            android:id="@+id/add_cart_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_cart_quantity_base"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorGreen"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Add to cart"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</LinearLayout>