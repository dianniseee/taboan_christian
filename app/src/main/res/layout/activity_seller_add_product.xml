<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayWhite"
    tools:context=".activity.seller.SellerAddProductActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingRight="20dp">

            <ImageButton
                android:id="@+id/back_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:background="@color/colorGrayWhite"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tv_sContext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/bungee"
                android:text="ADD PRODUCT"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="30sp" />


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <ImageView
                   android:id="@+id/iv_productPhoto1"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:layout_below="@+id/tv_sContext"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:background="@drawable/shape_rect_dash"
                   android:src="@drawable/ic_cover_add" />

               <ImageView
                   android:id="@+id/iv_productPhoto2"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:layout_below="@+id/tv_sContext"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:layout_weight="1"
                   android:layout_gravity="center"
                   android:background="@drawable/shape_rect_dash"
                   android:src="@drawable/ic_cover_add" />

           </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_productName"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvContext"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:elevation="1dp"
                android:hint="Product Name"
                android:textColorHint="@color/colorBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_input_design"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorBlack" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_productDescription"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvContext"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:elevation="1dp"
                android:hint="Decription"
                android:textColorHint="@color/colorBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_input_design"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorBlack" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description not applicable?  N/A"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_productCategory"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Price Category"
                android:textColorHint="@color/colorBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/te_productCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_input_design"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/colorBlack" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_productPrice"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvContext"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:elevation="1dp"
                android:hint="Price"
                android:textColorHint="@color/colorBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_input_design"
                    android:inputType="number"
                    android:textColor="@color/colorBlack" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_productAvailability"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="Availability"
                android:textColorHint="@color/colorBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/te_productAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_input_design"
                    android:focusableInTouchMode="false"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textColor="@color/colorBlack" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_register_product"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorBlack"
                android:elevation="3dp"
                android:fontFamily="@font/font"
                android:text="REGISTER"
                android:textColor="#ffffff"
                app:backgroundTint="@color/colorBlack" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>