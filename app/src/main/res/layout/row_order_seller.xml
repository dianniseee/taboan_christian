<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvROSCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


            <TextView
                android:id="@+id/seller_row_order_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Order ID:"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/seller_row_order_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/seller_row_order_text_id"
                android:fontFamily="sans-serif-medium"
                android:text="2039582831383"
                android:textColor="@color/colorGreen"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/seller_row_order_item"
                android:layout_below="@+id/seller_row_order_text_id"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Items:"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/seller_row_order_item_value"
                android:layout_toEndOf="@+id/seller_row_order_item"
                android:layout_below="@+id/seller_row_order_text_id"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:text="1"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium"
                />



            <TextView
                android:id="@+id/seller_row_order_status"
                android:layout_below="@+id/seller_row_order_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Progress"
                android:textSize="20sp"
                android:textColor="@color/colorBlue"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-medium"

                />

            <View
                android:id="@+id/viewROSLine"
                android:layout_below="@+id/seller_row_order_status"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"
                />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>