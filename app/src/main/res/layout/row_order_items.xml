<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/shape_rect05"
           android:elevation="3dp"
            android:layout_margin="10dp"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/colorWhite"
               android:padding="5dp"
               >

               <TextView
                   android:id="@+id/customer_order_store_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"
                   android:fontFamily="sans-serif-medium"
                   android:text="Store Name"
                   android:textColor="@color/colorBlack"
                   android:textSize="18sp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/customer_order_total"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:layout_marginTop="10dp"
                   android:layout_marginEnd="10dp"
                   android:fontFamily="sans-serif-black"
                   android:textSize="18sp"
                   android:textColor="@color/colorBlack"
                   android:textStyle="bold"
                   android:text="P 109.00"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="10dp" />


               <TextView
                   android:id="@+id/customer_order_date"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/customer_order_store_name"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"
                   android:fontFamily="sans-serif-medium"
                   android:text="10 Mar, 17:59"
                   android:textColor="@color/colorBlue" />


               <TextView
                   android:id="@+id/customer_order_status"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/customer_order_total"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginEnd="10dp"
                   android:layout_marginRight="10dp"
                   android:fontFamily="sans-serif-medium"
                   android:gravity="center"
                   android:text="Waiting"
                   android:textSize="20dp"
                   android:textColor="@color/colorGreen" />

               <Button
                   android:id="@+id/customer_order_view"
                   android:layout_width="match_parent"
                   android:layout_marginTop="20dp"
                   android:layout_height="50dp"
                   android:layout_below="@+id/customer_order_status"
                   android:text="View"
                   android:gravity="center"
                   android:textSize="13sp"
                   android:fontFamily="sans-serif-medium"
                   android:textColor="@color/colorWhite"
                   android:backgroundTint="@color/colorGreen"
                   />

           </RelativeLayout>

       </androidx.cardview.widget.CardView>


   </RelativeLayout>

</RelativeLayout>