<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFDashCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        android:elevation="3dp"
        android:layout_margin="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/row_driver_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Macao Imperial - SM LANANG"
                android:textColor="@color/colorGreen"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/row_driver_shop_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_driver_shop_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="#09247391745013"
                android:textColor="@color/colorGray"
                android:textSize="20sp" />


            <Button
                android:id="@+id/row_driver_shop_order_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_driver_shop_order_id"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="View Items"
                android:textColor="@color/colorChocolate"
                app:backgroundTint="@color/colorGrayWhite" />

            <Button
                android:id="@+id/row_driver_shop_order_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_driver_shop_order_id"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorGreen"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:text="ACCEPT"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>