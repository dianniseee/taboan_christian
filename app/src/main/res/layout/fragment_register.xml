<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">

    <ImageView
        android:id="@+id/welcomeimg"
        android:layout_width="300dp"
        android:layout_height="66dp"
        android:layout_alignLeft="@id/et_fname"
        android:layout_marginTop="50dp"
        android:layout_marginStart="-15dp"
        app:srcCompat="@drawable/welcome" />
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:visibility="gone"
        android:layout_above="@+id/welcomeimg"
        android:maxHeight="10dp"/>

    <TextView
        android:id="@+id/textafterwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeimg"
        android:layout_alignLeft="@id/et_fname"
        android:fontFamily="sans-serif-light"
        android:text="Sign Up to start your delivery"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/personalINfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textafterwelcome"
        android:layout_alignLeft="@id/et_fname"
        android:layout_marginTop="30dp"
        android:text="Personal Information*" />

    <EditText
        android:id="@+id/et_fname"
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:layout_below="@id/personalINfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:fontFamily="sans-serif-light"
        android:hint="FULL NAME"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:textAllCaps="true"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:layout_below="@id/et_fname"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:fontFamily="sans-serif-light"
        android:hint="ADDRESS"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:textAllCaps="true"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_contact"
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:layout_below="@id/et_address"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:fontFamily="sans-serif-light"
        android:hint="MOBILE NO."
        android:inputType="number"
        android:paddingHorizontal="10dp"
        android:textAllCaps="true"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/accountinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_contact"
        android:layout_alignLeft="@id/et_fname"
        android:layout_marginTop="30dp"
        android:text="Account Information*" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:layout_below="@id/accountinfo"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:fontFamily="sans-serif-light"
        android:hint="USERNAME"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/et_pass"
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:layout_below="@id/et_username"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_input"
        android:fontFamily="sans-serif-light"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:paddingHorizontal="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_repeat_pass"
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:layout_below="@id/et_pass"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_input"
        android:fontFamily="sans-serif-light"
        android:hint="CONFIRM PASSWORD"
        android:inputType="textPassword"
        android:paddingHorizontal="10dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_repeat_pass"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF077415"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="SIGN UP"
        android:textSize="18dp"
        app:cornerRadius="50dp" />

    <TextView
        android:id="@+id/loginacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:text="Already have an Account?"
        android:textColor="#29782B"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:layout_marginStart="5dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@id/loginacc"
        android:text="Log In"
        android:textColor="#29782B"
        android:textSize="15sp"
        android:textStyle="bold" />


